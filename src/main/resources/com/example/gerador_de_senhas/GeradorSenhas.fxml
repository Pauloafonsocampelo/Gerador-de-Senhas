<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #282828" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gerador_de_senhas.GeradorSenhasController">
   <children>
       <Pane prefHeight="100.0" prefWidth="443.0">
           <children>
               <TextField fx:id="Camposenha" layoutX="14.0" layoutY="20.0" prefHeight="30.0" prefWidth="416.0">
                   <font>
                       <Font name="Poppins Bold" size="18.0" />
                   </font>
               </TextField>
               <TextField fx:id="TamanhoSenha" layoutX="14.0" layoutY="60.0" prefHeight="30.0" prefWidth="210.0" promptText="Tamanho da senha">
                   <font>
                       <Font name="Poppins Bold" size="16.0" />
                   </font>
               </TextField>
           </children>
       </Pane>
       <VBox layoutY="100.0" prefHeight="270.0" prefWidth="443.0">
         <children>
            <CheckBox fx:id="chkLETRAS" mnemonicParsing="false" text="Letras maiúsculas" textFill="WHITE">
               <font>
                  <Font name="Poppins Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="12.0" />
               </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </CheckBox>
            <CheckBox fx:id="chkletras" mnemonicParsing="false" text="Letras minúsculas" textFill="WHITE">
               <font>
                  <Font name="Poppins Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="35.0" />
               </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </CheckBox>
            <CheckBox fx:id="chkNumeros" mnemonicParsing="false" text="Incluir números" textFill="WHITE">
               <font>
                  <Font name="Poppins Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="35.0" />
               </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </CheckBox>
            <CheckBox fx:id="chkSimbolos" mnemonicParsing="false" text="Incluir símbolos (@#%!*$...)" textFill="WHITE">
               <font>
                  <Font name="Poppins Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="35.0" />
               </VBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </CheckBox>
         </children>
      </VBox>
      <VBox layoutY="370.0" prefHeight="142.0" prefWidth="443.0">
         <children>
            <Button fx:id="btnGerar" mnemonicParsing="false" prefHeight="40.0" prefWidth="343.0" text="Gerar Senha">
               <VBox.margin>
                  <Insets left="50.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Poppins Bold" size="26.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnCopiar" mnemonicParsing="false" prefHeight="40.0" prefWidth="343.0" text="Copiar">
               <VBox.margin>
                  <Insets left="50.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Poppins" size="26.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
